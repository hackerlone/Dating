<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/paizhao"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:textSize="20dip"
        android:onClick="paizhao"
        android:text="拍照"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/orange"></LinearLayout>
    <TextView
        android:id="@+id/xiangce"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:textSize="20dip"
        android:onClick="xiangce"
        android:text="从相册中获取"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/orange"></LinearLayout>
    <TextView
        android:id="@+id/quxiao"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:onClick="quxiao"
        android:textSize="20dip"
        android:text="取消"></TextView>
</LinearLayout>
